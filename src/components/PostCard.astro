---
import {Image} from "@astrojs/image/components"

const {frontmatter, url} = Astro.props;
// Destructure with default values for all properties
const {
    title, 
    date, 
    author, 
    category, 
    description, 
    image
} = frontmatter;
console.log("from PostCard: ", frontmatter)

import moment from 'moment';


---
<article class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition duration-300 ease-in-out transform hover:-translate-y-1 dark:bg-gray-800 dark:hover:shadow-2xl">
    <Image src={image.src} alt={image.alt} width={500} height={400} class="w-full h-auto rounded-lg mb-4 object-cover"/>
    <h3 class="text-2xl font-semibold text-gray-900 mb-2 dark:text-gray-100">{title}</h3>
    <p class="text-gray-600 text-sm mb-3 dark:text-gray-400">
        <span class="font-medium">{author}</span> on <time datetime="2023-10-26">{moment(date).fromNow()}</time> in <a href="#" class="text-indigo-600 hover:underline dark:text-indigo-400">{category}</a>
    </p>
    <p class="text-gray-700 leading-relaxed mb-4 dark:text-gray-300">
       {description}            
    </p>
    <a href={url} class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-full font-semibold hover:bg-indigo-700 transition duration-300 shadow-md dark:bg-indigo-700 dark:hover:bg-indigo-600">Read More</a>
</article>
