---
import { Icon } from 'astro-icon/components';
import '../styles/global.css';



interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonicalUrl?: string;
  // Add other props for dynamic meta tags
}

const {
  title = 'Abderrazaq EL Abassi - Personal Website',
  description = 'Welcome to my personal website! Here you can find information about my skills, projects, talks, and publications.',
  ogImage = '/images/abdo.jpeg',
  canonicalUrl = Astro.url.href, // Get the current page URL
} = Astro.props;

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Google Tag Manager -->
