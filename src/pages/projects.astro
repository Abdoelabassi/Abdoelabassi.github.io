---
import MainLayout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

const projects = [
  {
    title: "Project Name 1",
    description: "A brief description of the project, its goals, and the technologies used. This should give visitors a clear understanding of what the project is about.",
    image: "/placeholder.svg?height=200&width=400",
    tags: ["Python", "Machine Learning", "Data Analysis"],
    links: [
      { icon: "tabler:brand-github", url: "https://github.com/Abdoelabassi/", label: "GitHub" },
      { icon: "tabler:external-link", url: "#", label: "Live Demo" },
      { icon: "tabler:file-text", url: "#", label: "Paper" }
    ]
  },
  {
    title: "Project Name 2",
    description: "A brief description of the project, its goals, and the technologies used. This should give visitors a clear understanding of what the project is about.",
    image: "/placeholder.svg?height=200&width=400",
    tags: ["R", "Statistics", "Data Visualization"],
    links: [
      { icon: "tabler:brand-github", url: "https://github.com/", label: "GitHub" },
      { icon: "tabler:external-link", url: "#", label: "Live Demo" }
    ]
  },
  {
    title: "Project Name 3",
    description: "A brief description of the project, its goals, and the technologies used. This should give visitors a clear understanding of what the project is about.",
    image: "/placeholder.svg?height=200&width=400",
    tags: ["JavaScript", "Web Development", "API"],
    links: [
      { icon: "tabler:brand-github", url: "https://github.com/", label: "GitHub" },
      { icon: "tabler:external-link", url: "#", label: "Live Demo" }
    ]
  }
];
---

<MainLayout title="Projects - Your Name">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <h1 class="text-3xl font-bold mb-8">Projects</h1>
    
    <div class="space-y-12">
      {projects.map((project, index) => (
        <div class={`flex flex-col ${index % 2 === 1 ? 'md:flex-row-reverse' : 'md:flex-row'} gap-6`}>
          <div class="md:w-1/2">
            <Image 
              src={project.image || "/placeholder.svg"} 
              alt={project.title} 
              width={400} 
              height={200} 
              class="w-full h-auto rounded-lg shadow-md"
            />
          </div>
          
          <div class="md:w-1/2">
            <h2 class="text-2xl font-bold mb-2">{project.title}</h2>
            <p class="mb-4 text-gray-700 dark:text-gray-300">{project.description}</p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map(tag => (
                <span class="px-3 py-1 bg-emerald-100 dark:bg-emerald-900 text-emerald-800 dark:text-emerald-200 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
            
            <div class="flex gap-3">
              {project.links.map(link => (
                <a 
                  href={link.url} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  class="flex items-center gap-1 text-emerald-600 dark:text-emerald-400 hover:underline"
                  aria-label={link.label}
                >
                  <Icon name={link.icon} class="w-5 h-5" />
                  <span>{link.label}</span>
                </a>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</MainLayout>

