                  <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded text-xs">PostgreSQL</span>
                </div>
              </div>
            </div>
          </section>

          <!-- Certifications -->
          <section>
            <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-blue-600 pb-2">Certifications</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-600 rounded-full"></div>
                <span class="text-gray-700">AWS Certified Developer - Associate</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-600 rounded-full"></div>
                <span class="text-gray-700">Google Cloud Platform Professional</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-600 rounded-full"></div>
                <span class="text-gray-700">Certified Scrum Master (CSM)</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-600 rounded-full"></div>
                <span class="text-gray-700">MongoDB Certified Developer</span>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </main>
</MainLayout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const downloadBtn = document.getElementById('downloadBtn');
    const cvContent = document.getElementById('cvContent');

    if (downloadBtn && cvContent) {
      downloadBtn.addEventListener('click', function() {
        // Create a new window for printing
        const printWindow = window.open('', '_blank');
        
        if (printWindow) {
          printWindow.document.write(`
            <!DOCTYPE html>
            <html>
            <head>
              <title>John Doe - CV</title>
              <style>
                body { font-family: Arial, sans-serif; margin: 0; padding: 20px; }
                .cv-content { max-width: 800px; margin: 0 auto; }
                .header { background: linear-gradient(to right, #2563eb, #1d4ed8); color: white; padding: 30px; margin-bottom: 30px; }
                .header h1 { margin: 0 0 10px 0; font-size: 2.5em; }
                .header p { margin: 5px 0; }
                .section { margin-bottom: 30px; }
                .section h2 { color: #1d4ed8; border-bottom: 2px solid #2563eb; padding-bottom: 10px; }
                .experience-item { margin-bottom: 20px; padding-left: 20px; border-left: 4px solid #2563eb; }
                .skills-tag { display: inline-block; background: #e0e7ff; color: #1d4ed8; padding: 5px 10px; margin: 2px; border-radius: 15px; font-size: 0.9em; }
                ul { padding-left: 20px; }
                li { margin-bottom: 5px; }
                @media print {
                  body { margin: 0; padding: 15px; }
                  .header { background: #2563eb !important; }
                }
              </style>
            </head>
            <body>
              ${cvContent.innerHTML}
            </body>
            </html>
          `);
          
          printWindow.document.close();
          
          // Wait for content to load then print
          setTimeout(() => {
            printWindow.print();
            printWindow.close();
          }, 500);
        }
      });
    }
  });
</script>

<style>
  @media print {
    body {
      margin: 0;
      padding: 0;
    }
    
    #downloadBtn {
      display: none;
    }
    
    #cvContent {
      box-shadow: none;
      border-radius: 0;
    }
  }
</style>

