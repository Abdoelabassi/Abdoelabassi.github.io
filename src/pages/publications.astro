---
import MainLayout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

const publications = [
  {
    title: "",
    authors: "",
    journal: "",
    year: "",
    doi: "1",
    abstract: ".",
    links: [
      { icon: "tabler:file-text", url: "#", label: "PDF" },
      { icon: "tabler:code", url: "#", label: "Code" },
      { icon: "tabler:external-link", url: "#", label: "Publisher" }
    ]
  },
  
 
];
---

<MainLayout title="Publications - Your Name">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <h1 class="text-3xl font-bold mb-8">Publications</h1>
    
    <div class="space-y-8">
      {publications.map(pub => (
        <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-6">
          <h2 class="text-xl font-bold mb-2">{pub.title}</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-1">{pub.authors}</p>
          <p class="text-gray-600 dark:text-gray-400 mb-4">{pub.journal} {pub.year}</p>
          
          <div class="mb-4">
            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Loading ....</h3>
            <p class="text-gray-700 dark:text-gray-300">{pub.abstract}</p>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <a 
              href={`https://doi.org/${pub.doi}`} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="flex items-center gap-1 text-emerald-600 dark:text-emerald-400 hover:underline"
            >
              <Icon name="tabler:link" class="w-4 h-4" />
              <span>DOI: {pub.doi}</span>
            </a>
            
            {pub.links.map(link => (
              <a 
                href={link.url} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="flex items-center gap-1 text-emerald-600 dark:text-emerald-400 hover:underline"
              >
                <Icon name={link.icon} class="w-4 h-4" />
                <span>{link.label}</span>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</MainLayout>

