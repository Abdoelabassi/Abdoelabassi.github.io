---
import MainLayout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

// Get all products from the collection
let allProducts: CollectionEntry<'product'>[] = [];
try {
  allProducts = await getCollection('product');
} catch (error) {
  console.error('Error loading products collection:', error);
  allProducts = [];
}

// Sort products by featured first, then by publish date
const sortedProducts = allProducts.length > 0 ? allProducts.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  if (a.data.publishedAt && b.data.publishedAt) {
    return b.data.publishedAt.getTime() - a.data.publishedAt.getTime();
  }
  return 0;
}) : [];

// Group products by category
const categories = new Set(allProducts.map(p => p.data.category).filter(Boolean));
const categoryIcons: Record<string, string> = {
  'Electronics': 'tabler:device-laptop',
  'Furniture': 'tabler:armchair',
  'Digital Products': 'tabler:cloud-download',
};

const getCategoryIcon = (category?: string) => {
  return categoryIcons[category || ''] || 'tabler:box';
};

const getCategoryColor = (category?: string) => {
  const colors: Record<string, string> = {
    'Electronics': 'blue',
    'Furniture': 'amber',
    'Digital Products': 'purple',
  };
  return colors[category || ''] || 'gray';
};

const getCategoryClasses = (category: string | undefined, type: 'gradient' | 'badge' | 'hover') => {
  const color = getCategoryColor(category);
  const classes = {
    gradient: {
      blue: "from-blue-400 to-blue-600 dark:from-blue-500 dark:to-blue-700",
      amber: "from-amber-400 to-amber-600 dark:from-amber-500 dark:to-amber-700",
      purple: "from-purple-400 to-purple-600 dark:from-purple-500 dark:to-purple-700",
      gray: "from-gray-400 to-gray-600 dark:from-gray-500 dark:to-gray-700"
    },
    badge: {
      blue: "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200",
      amber: "bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-200",
      purple: "bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200",
      gray: "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200"
    },
    hover: {
      blue: "hover:from-blue-500 hover:to-blue-700",
      amber: "hover:from-amber-500 hover:to-amber-700",
      purple: "hover:from-purple-500 hover:to-purple-700",
      gray: "hover:from-gray-500 hover:to-gray-700"
    }
  };
  return classes[type][color] || '';
};

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD'
  }).format(price);
};

const getDiscountPercentage = (price: number, originalPrice?: number) => {
  if (!originalPrice) return null;
  return Math.round(((originalPrice - price) / originalPrice) * 100);
};
---

<MainLayout>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800">
    <!-- Header -->
    <section class="py-12 md:py-20 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-4 bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">
          My Shop
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Curated collection of used items and digital products. Everything carefully selected and tested.
        </p>
      </div>
    </section>

    <!-- Stats -->
    <section class="py-8 px-4 border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-6xl mx-auto grid grid-cols-3 gap-4 md:gap-8">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-blue-600 to-blue-400 dark:from-blue-400 dark:to-blue-300 bg-clip-text text-transparent">
            {allProducts.length}
          </div>
          <p class="text-sm md:text-base text-gray-600 dark:text-gray-400">Products</p>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-purple-600 to-purple-400 dark:from-purple-400 dark:to-purple-300 bg-clip-text text-transparent">
            {allProducts.filter(p => p.data.featured).length}
          </div>
          <p class="text-sm md:text-base text-gray-600 dark:text-gray-400">Featured</p>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-amber-600 to-amber-400 dark:from-amber-400 dark:to-amber-300 bg-clip-text text-transparent">
            {allProducts.filter(p => p.data.inStock).length}
          </div>
          <p class="text-sm md:text-base text-gray-600 dark:text-gray-400">In Stock</p>
        </div>
      </div>
    </section>

    <!-- Products Grid -->
    <section class="py-12 md:py-16 px-4">
      <div class="max-w-6xl mx-auto">
        {sortedProducts.length === 0 ? (
          <div class="text-center py-12">
            <p class="text-gray-600 dark:text-gray-400">No products found yet. Check back soon!</p>
          </div>
        ) : (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {sortedProducts.map((product) => (
              <div class="group bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden">
                <!-- Product Image -->
                <div class="relative overflow-hidden bg-gray-100 dark:bg-gray-700 aspect-square">
                  {product.data.image && (
                    <img 
                      src={product.data.image} 
                      alt={product.data.title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    />
                  )}
                  
                  {/* Badges */}
                  <div class="absolute top-3 right-3 flex flex-col gap-2">
                    {product.data.featured && (
                      <div class="bg-amber-500 text-white px-3 py-1 rounded-full text-xs font-semibold">
                        Featured
                      </div>
                    )}
                    {product.data.originalPrice && product.data.originalPrice > product.data.price && (
                      <div class={`bg-gradient-to-r ${getCategoryClasses(product.data.category, 'gradient')} text-white px-3 py-1 rounded-full text-xs font-semibold`}>
                        -{getDiscountPercentage(product.data.price, product.data.originalPrice)}%
                      </div>
                    )}
                  </div>

                  {/* Stock Status */}
                  {!product.data.inStock && (
                    <div class="absolute inset-0 bg-black/50 flex items-center justify-center">
                      <span class="bg-red-600 text-white px-4 py-2 rounded-lg font-semibold">Out of Stock</span>
                    </div>
                  )}
                </div>

                <!-- Product Info -->
                <div class="p-4">
                  <!-- Category Badge -->
                  <div class="mb-3">
                    <span class={`inline-flex items-center gap-1 text-xs font-semibold px-2.5 py-1 rounded-full ${getCategoryClasses(product.data.category, 'badge')}`}>
                      <Icon name={getCategoryIcon(product.data.category)} class="w-3 h-3" />
                      {product.data.category || 'Uncategorized'}
                    </span>
                  </div>

                  <!-- Title -->
                  <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2 line-clamp-2">
                    {product.data.title}
                  </h3>

                  <!-- Description -->
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
                    {product.data.description}
                  </p>

                  <!-- Price -->
                  <div class="flex items-baseline gap-2 mb-4">
                    <span class="text-2xl font-bold text-gray-900 dark:text-white">
                      {formatPrice(product.data.price)}
                    </span>
                    {product.data.originalPrice && (
                      <span class="text-sm text-gray-500 dark:text-gray-400 line-through">
                        {formatPrice(product.data.originalPrice)}
                      </span>
                    )}
                  </div>

                  <!-- Tags -->
                  {product.data.tags && product.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-4">
                      {product.data.tags.slice(0, 3).map((tag) => (
                        <span key={tag} class="text-xs bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-2 py-1 rounded">
                          #{tag}
                        </span>
                      ))}
                    </div>
                  )}

                  <!-- CTA Button -->
                  <a href={`/shop/${product.id}`} class={`block w-full py-2 px-4 rounded-lg font-semibold transition-all duration-300 bg-gradient-to-r ${getCategoryClasses(product.data.category, 'gradient')} ${getCategoryClasses(product.data.category, 'hover')} text-white text-center ${!product.data.inStock ? 'opacity-50 cursor-not-allowed pointer-events-none' : ''}`}>
                    {product.data.inStock ? 'View Details' : 'Out of Stock'}
                  </a>
                </div>
              </div>
            ))}
          </div>
        )}
      </div>
    </section>

    <!-- Categories Section -->
    {categories.size > 0 && (
      <section class="py-12 md:py-16 px-4 border-t border-gray-200 dark:border-gray-700">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Categories</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {Array.from(categories).sort().map((category) => {
              const count = allProducts.filter(p => p.data.category === category).length;
              return (
                <div class={`p-6 rounded-lg bg-gradient-to-br ${getCategoryClasses(category, 'gradient')} text-white cursor-pointer hover:shadow-lg transition-all`}>
                  <div class="flex items-start gap-4">
                    <Icon name={getCategoryIcon(category)} class="w-8 h-8" />
                    <div>
                      <h3 class="font-bold text-lg">{category}</h3>
                      <p class="text-sm opacity-90">{count} item{count !== 1 ? 's' : ''}</p>
                    </div>
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      </section>
    )}
  </div>
</MainLayout>
