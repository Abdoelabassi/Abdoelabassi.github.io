---
import MainLayout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<MainLayout title="Contact - Your Name">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Contact</h1>
    
    <div class="grid md:grid-cols-2 gap-8">
      <div>
        <div class="prose max-w-none dark:prose-invert">
          <p>Feel free to get in touch with me regarding research collaborations, speaking engagements, or any questions about my work.</p>
          
          <div class="mt-6 space-y-4">
            <div class="flex items-start gap-3">
              <Icon name="tabler:mail" class="w-5 h-5 mt-1 text-primary-600 dark:text-primary-400" />
              <div>
                <h3 class="font-medium">Email</h3>
                <p><a href="mailto:your.email@university.edu">your.email@university.edu</a></p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <Icon name="tabler:map-pin" class="w-5 h-5 mt-1 text-primary-600 dark:text-primary-400" />
              <div>
                <h3 class="font-medium">Office</h3>
                <p>Room 123, Research Building<br>University Research Center<br>City, State, ZIP</p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <Icon name="tabler:phone" class="w-5 h-5 mt-1 text-primary-600 dark:text-primary-400" />
              <div>
                <h3 class="font-medium">Phone</h3>
                <p>(123) 456-7890</p>
              </div>
            </div>
          </div>
          
          <h2 class="mt-8">Connect with me</h2>
          <div class="flex gap-4">
            <a href="https://github.com/" target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">
              <Icon name="tabler:brand-github" class="w-6 h-6" />
              <span class="sr-only">GitHub</span>
            </a>
            <a href="https://twitter.com/" target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">
              <Icon name="tabler:brand-twitter" class="w-6 h-6" />
              <span class="sr-only">Twitter</span>
            </a>
            <a href="https://linkedin.com/" target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">
              <Icon name="tabler:brand-linkedin" class="w-6 h-6" />
              <span class="sr-only">LinkedIn</span>
            </a>
            <a href="https://orcid.org/" target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">
              <Icon name="tabler:id" class="w-6 h-6" />
              <span class="sr-only">ORCID</span>
            </a>
            <a href="https://scholar.google.com/" target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">
              <Icon name="tabler:school" class="w-6 h-6" />
              <span class="sr-only">Google Scholar</span>
            </a>
          </div>
        </div>
      </div>
      
      <div>
        <form class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-medium mb-1">Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md bg-white dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-primary-500"
              required
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium mb-1">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md bg-white dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-primary-500"
              required
            />
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium mb-1">Subject</label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md bg-white dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-primary-500"
              required
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium mb-1">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md bg-white dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-primary-500"
              required
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            class="px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-md transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</MainLayout>

